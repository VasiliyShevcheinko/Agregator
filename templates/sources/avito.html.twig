{% extends 'baseSource.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('./css/sources/avito.css') }}" type="text/css" rel="stylesheet"/>
{% endblock %}

{% block source %}
    <h1>Avito.ru</h1>
    <div class="items-container">
        {% for item in pageData %}
            <div class="item-container">
                <div class="img-container">
                    <img src="{{ item['imgSrc'] }}" alt="{{ item['imgAlt'] }}" title="{{ item['title'] }}">
                </div>
                <a href="{{ item['href'] }}" target="_blank"><h6>{{ item['title'] }}</h6></a>
                <h6>{{ item['price'] }}</h6>
            </div>
        {% endfor %}

    </div>
{% endblock %}
